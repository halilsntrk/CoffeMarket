<section class="container-fluid">
    <div class="col-md-9">
        <div class="">
            <form method="post" enctype="multipart/form-data">


                <div class="form-group">

                    <input  hidden required class="form-control" />
                </div>
                <div class="form-group">

                    <input hidden required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Etkinlik Adı: </label>
                    <input placeholder="Ürünün Adı" required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Etkinlik Tarihi: </label>
                    <input  value="" type="datetime-local" placeholder="Ürün Tipi" required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Etkinlik Geçerlilik Tarihi: </label>
                    <input  value="" type="datetime-local" placeholder="Ürün Gramajı" required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Etkinlik Kontenjanı: </label>
                    <input  value="" placeholder="Fiyatı" required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Etkinlik Açıklaması: </label>
                    <input placeholder="Spot Açıklama" required class="form-control" />
                </div>

                <div class="form-group">
                    <label>Adres </label>
                    <input placeholder="" required class="form-control" />
                </div>


                <div class="row mt-2">
                    <div class="col-12">
                        <label class="col-form-label">Etkinlik Resmi</label>
                        <input class="form-control" />
                        <span class="text-danger"></span>
                    </div>
                </div>


                <div class="row mt-2">
                    <div class="col-12">
                        <label class="col-form-label">Etkinlik Listeleme Resmi</label>
                        <input  class="form-control" />
                        <span  class="text-danger"></span>
                    </div>
                </div>

                <button asp-action="CreateEvent" asp-controller="Profile" class="btn btn-success my-3" type="submit">Etkinliği Kaydet</button>
            </form>

        </div>
    </div>



</section>